              .cell-sm-5.cell-md-10.blog-aside-item.text-center
                .blog-aside-item-inner
                  h4 Tags
                  .tag-list
                    a.tag(href='#') help
                    a.tag(href='#') doctor
                    a.tag(href='#') medicine
                    a.tag(href='#') dental
                    a.tag(href='#') patient
                    a.tag(href='#') oral






