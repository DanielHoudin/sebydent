extends  ../_skeleton

block variables
  - var activeCategory = 'Contacts'

block title
  title Contact Us

block page
  // Page Header
  include ../sections/_header-default

  // Contact Us
  +breadcrumb-classic('images/bg-10.jpg', 'Contact Us',
  {
    0: {
      "title": "Home",
      "href": "./"
    },
    1: {
      "title": "Contact Us"
    }
  }
  )

  // Get in Touch
  section.section.section-lg.bg-white
    .shell
      .range.range-30
        .cell-md-5
          .form-block
            h3 Get in Touch
            p We are available 24/7 by fax, e-mail or by phone. You can also use our quick
              br.veil.reveal-lg-block
              =" "
              | contact form to ask a question about our services that we regularly provide.
            form.rd-mailform(data-form-output='form-output-global', data-form-type='contact', method='post', action='bat/rd-mailform.php')
              .range.range-xs-center.range-20.range-narrow

                .cell-sm-5
                  .form-wrap.form-wrap-validation
                    select.form-input.select-filter(data-style='modern' data-placeholder="Select a Department", data-minimum-results-for-search="Infinity", data-constraints="@Required")
                      option(label="placeholder")
                      option(value="2") Neurology
                      option(value="3") Dentistry
                      option(value="4") Cardiology
                      option(value="5") Pediatrics
                      option(value="6") Pulmonology
                      option(value="7") Ophthalmology
                      option(value="9") Diagnostics
                    span.select-arrow
                .cell-sm-5
                  .form-wrap.form-wrap-validation
                    label.form-label(for='forms-name') Your Name
                    input#forms-name.form-input(type='text', name='name', data-constraints='@Required')
                .cell-sm-5
                  .form-wrap.form-wrap-validation
                    label.form-label(for='forms-date') Date of Birth
                    input#forms-date.form-input(type='text', name='name', data-constraints='@Required')
                .cell-sm-5
                  .form-wrap.form-wrap-validation
                    label.form-label(for='forms-phone') Phone
                    input#forms-phone.form-input(type='text', name='phone', data-constraints='@Numeric @Required')
                .cell-sm-10
                  .form-wrap.form-wrap-validation
                    label.form-label(for='forms-message') Your Message
                    textarea#forms-message.form-input(name='message', data-constraints='@Required')
                .cell-sm-5
                  .form-wrap.form-wrap-validation
                    label.form-label(for='forms-email') E-mail
                    input#forms-email.form-input(type='email', name='email', data-constraints='@Email @Required')
                .cell-sm-5
                  .form-button
                    button.button.button-effect-ujarak.button-primary.button-block.button-square(type='submit') send message
        .cell-md-5.gm-contact-wrap
          .gm-contact-inner
            .rd-google-map(class="rd-google-map__model", data-zoom='15', data-y='40.643180', data-x='-73.9874068', data-styles='')
              ul.map_locations
                li(data-y='40.643180', data-x='-73.9874068')
                  p
                    | 9870 St Vincent Place, Glasgow, DC 45 Fr 45.
  // Page Footer
  include ../sections/_footer-default