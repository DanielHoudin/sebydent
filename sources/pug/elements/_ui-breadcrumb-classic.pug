//- Breadcrumbs

//- imgPath - path to image
//- pageTitle - Page title
//- breadcrumbs - obj of breadcrumbs items

mixin breadcrumb-classic(imgPath, pageTitle, breadcrumbs)
	section.section.section-breadcrumb
		.parallax-container.breadcrumb-wrapper(data-parallax-img=imgPath)
			.parallax-content.section-lg.context-dark
				.shell.context-dark
					h2=pageTitle
					.divider

		ul.breadcrumb-custom
			each link, index in breadcrumbs
				if (breadcrumbs[parseInt(index) + 1] )
					li
						a(href=link.href)= link.title
				else
					li
						= link.title